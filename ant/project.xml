<?xml version="1.0" encoding="utf-8"?>
<project>
  <extend>../build/project.xml</extend>
  <pomVersion>1</pomVersion>
  <name>Ant plugin</name>
  <description>The ant tool for jalopy</description>
  <artifactId>jalopy-ant</artifactId>
  <currentVersion>0.1-${jalopy.currentVersion}</currentVersion>
  <package>*</package>
  <shortDescription>Ant</shortDescription>
  <dependencies>
    <dependency>
      <groupId>${jalopy.groupId}</groupId>
      <artifactId>${jalopy.artifactId}</artifactId>
      <version>${jalopy.currentVersion}</version>
      <url>http://jalopy.sf.net/</url>
      <type>jar</type>
      <properties>
        <core>true</core>
      </properties>
    </dependency>
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.5</version>
      <type>jar</type>
      <url>http://ant.apache.org/</url>
    </dependency>
  </dependencies>
  <versions>
    <version>
      <id>0.1-${jalopy.currentVersion}</id>
      <name>0.1-${jalopy.currentVersion}</name>
      <tag>DEV_1_5</tag>
    </version>
  </versions>
  <reports>
    <report>maven-javadoc-plugin</report>
    <report>maven-changes-plugin</report>
  </reports>
</project>
