<?xml version="1.0" encoding="utf-8"?>
<project>
  <extend>../build/project.xml</extend>
  <pomVersion>1</pomVersion>
  <name>Jedit plugin</name>
  <description>The jedit tool for jalopy</description>
  <artifactId>jalopy-jedit</artifactId>
  <currentVersion>0.1-${jalopy.currentVersion}</currentVersion>
  <package>*</package>
  <shortDescription>Console</shortDescription>
  <dependencies>
    <dependency>
      <groupId>${jalopy.groupId}</groupId>
      <artifactId>${jalopy.artifactId}</artifactId>
      <version>${jalopy.currentVersion}</version>
      <url>http://jalopy.sf.net/</url>
      <type>jar</type>
      <properties>
        <core>true</core>
      </properties>
    </dependency>
    <dependency>
      <groupId>messageview</groupId>
      <artifactId>messageview</artifactId>
      <version>0.1.0</version>
      <type>jar</type>
      <url>http://jedit.org/</url>
      <properties>
        <core>true</core>
      </properties>
    </dependency>
    <dependency>
      <groupId>jedit</groupId>
      <artifactId>jedit</artifactId>
      <version>4.2</version>
      <type>jar</type>
      <url>http://jedit.org/</url>
      <properties>
        <core>true</core>
      </properties>
    </dependency>
  </dependencies>
  <versions>
    <version>
      <id>0.1-${jalopy.currentVersion}</id>
      <name>0.1-${jalopy.currentVersion}</name>
      <tag>DEV_1_5</tag>
    </version>
  </versions>
  <reports>
    <report>maven-javadoc-plugin</report>
    <report>maven-changes-plugin</report>
  </reports>
</project>
